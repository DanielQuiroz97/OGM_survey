medios %>% filter(Valor != 0) %>% 
  arrange(Index) %>% 
  group_by(Index) %>% mutate(total = sum(Valor)) %>%
  #ungroup() %>%
  count(total) %>% ungroup() %>% count(n)
  
medios %>% filter(Valor != 0) %>% arrange(Index) %>%
  group_by(Index) %>% mutate(total = sum(Valor)) %>%
  select(-Valor) %>%
  spread(Medio, total) %>% View()
  ggplot() +
  geom_bar(aes(total, fill = Medio))


